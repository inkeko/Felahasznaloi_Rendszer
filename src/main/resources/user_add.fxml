            fx:controller="org.example.controller.UserAddController">

    <children>
        <TextField fx:id="usernameField" layoutX="275.0" layoutY="68.0" />
        <TextField fx:id="emailField" layoutX="276.0" layoutY="112.0" />

        <Label layoutX="160.0" layoutY="72.0" text="Felhasználónév" />
        <Label layoutX="160.0" layoutY="116.0" text="Email" />

        <Button fx:id="saveButton" layoutX="175.0" layoutY="200.0" text="Mentés" onAction="#handleSave" />
